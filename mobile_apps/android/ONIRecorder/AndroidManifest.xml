<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.pointclouds.onirec">
    <uses-sdk android:minSdkVersion="12" android:targetSdkVersion="16"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.usb.host" />
    <uses-feature android:name="android.hardware.screen.landscape" />
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name=".Application">
        <activity android:name=".MainActivity" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".PreferencesActivity" android:label="@string/caption_preferences"/>
    </application>
</manifest>
